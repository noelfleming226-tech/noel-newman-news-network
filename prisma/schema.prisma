generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  STAFF
  ADMIN
}

enum PostStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
}

enum MediaType {
  YOUTUBE
  TWEET
  VIDEO
  IMAGE
  AUDIO
  EMBED
}

enum CoverImageSize {
  COMPACT
  STANDARD
  FEATURE
}

enum CoverImagePosition {
  TOP
  CENTER
  BOTTOM
}

enum EngagementEventType {
  LINK_CLICK
  TIME_ON_PAGE
}

model User {
  id           String    @id @default(cuid())
  name         String
  email        String    @unique
  username     String    @unique
  passwordHash String
  role         UserRole  @default(STAFF)
  posts        Post[]    @relation("PostAuthor")
  sessions     Session[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  posts     Post[]
  createdAt DateTime @default(now())
}

model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  posts     PostTag[]
  createdAt DateTime  @default(now())
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Post {
  id            String       @id @default(cuid())
  title         String
  slug          String       @unique
  excerpt       String?
  body          String
  status        PostStatus   @default(DRAFT)
  publishedAt   DateTime?
  coverImageUrl String?
  coverImageSize CoverImageSize @default(COMPACT)
  coverImageHeight Int?
  coverImagePosition CoverImagePosition @default(CENTER)
  categoryId     String?
  category       Category?     @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  authorId      String
  author        User         @relation("PostAuthor", fields: [authorId], references: [id], onDelete: Restrict)
  media         MediaAsset[]
  tags          PostTag[]
  viewEvents    PostViewEvent[]
  engagementEvents PostEngagementEvent[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([status, publishedAt])
  @@index([categoryId])
}

model PostViewEvent {
  id             String   @id @default(cuid())
  postId          String
  post            Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  sessionKeyHash  String
  userAgentHash   String?
  referrerHost    String?
  path            String
  occurredAt      DateTime @default(now())

  @@index([postId, occurredAt])
  @@index([occurredAt])
  @@index([postId, sessionKeyHash, occurredAt])
  @@index([referrerHost, occurredAt])
}

model PostEngagementEvent {
  id             String              @id @default(cuid())
  postId          String
  post            Post                @relation(fields: [postId], references: [id], onDelete: Cascade)
  type            EngagementEventType
  sessionKeyHash  String
  userAgentHash   String?
  referrerHost    String?
  path            String
  targetUrl       String?
  targetHost      String?
  secondsOnPage   Int?
  occurredAt      DateTime            @default(now())

  @@index([postId, type, occurredAt])
  @@index([type, occurredAt])
  @@index([postId, sessionKeyHash, type, occurredAt])
}

model MediaAsset {
  id        String    @id @default(cuid())
  postId    String
  post      Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  type      MediaType
  url       String
  caption   String?
  sortOrder Int       @default(0)
  createdAt DateTime  @default(now())

  @@index([postId, sortOrder])
}

model PostTag {
  postId     String
  tagId      String
  assignedAt DateTime @default(now())
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag        Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@index([tagId])
}
